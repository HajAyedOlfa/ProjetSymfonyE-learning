{% extends 'base.html.twig' %}


{% block title %}menu{% endblock %}


{% block body %}
    {{ include ('index/navBarre.html.twig') }}
    {{ include ('index/sideBare.html.twig') }}

<body class="theme-cyan">

<!-- Page Loader -->
<div class="page-loader-wrapper">
    <div class="loader">
        <div class="m-t-30"><img src="http://www.wrraptheme.com/templates/lucid/hospital/assets/images/logo-icon.svg"
                                 width="48" height="48" alt="Lucid"></div>
        <p>Please wait...</p>
    </div>
</div>
<!-- Overlay For Sidebars -->

<div id="wrapper">
    <div id="main-content">
        <div class="container-fluid">
            <div class="block-header">
                <div class="row">
                    <div class="col-lg-6 col-md-8 col-sm-12">
                        <h2><a href="javascript:void(0);" class="btn btn-xs btn-link btn-toggle-fullwidth"><i
                                        class="fa fa-arrow-left"></i></a> Dashboard</h2>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html"><i class="icon-home"></i></a></li>
                            <li class="breadcrumb-item active">Dashboard</li>
                        </ul>
                    </div>

                </div>
            </div>


            <div class="row clearfix">

                <div class="col-lg-12">
                    <div class="card">
                        <div class="body">

                            <h3>Matière</h3>

                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ matiere.id }}</td>
                                </tr>
                                <tr>
                                    <th>NomMat</th>
                                    <td>{{ matiere.nomMat }}</td>
                                </tr>
                                <tr>
                                    <th>PrixMat</th>
                                    <td>{{ matiere.prixMat }}</td>
                                </tr>
                                <tr>
                                    <th>image Matière</th>
                                    <td>
                                        {% if app.request.attributes.get('_route')== 'index_matiere_show' %}
                                            <div>
                                                <img src="{{  asset('/uploads/'~ matiere.imgMat) }}" alt="Image" width="500">
                                            </div>
                                        {% endif %}
                                    </td>
                                </tr>
                                </tbody>
                            </table>

                            <a href="{{ path('index') }}">
                                <button type="button" class="btn btn-outline-secondary">Retour à la liste des Matières</button>
                            </a>



                        </div>

                    </div>
                    <div class="card">
                        <div class="header">
                            <h2>Liste des cours de {{ matiere.nomMat }}</h2>
                        </div>
                        <div class="body">
                            <ul class="list-group">


                                {% for cour in matiere.getCours() %}
                                    <li class="list-group-item">{{ cour.getNomCours() }}
                                        <a href="{{ path('cours_show', {'id': cour.id}) }}">
                                            <p class="float-right"><button class="btn btn-outline-success icon-eye " ></button></p>

                                        </a>
                                    </li>
                                {% endfor %}

                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
